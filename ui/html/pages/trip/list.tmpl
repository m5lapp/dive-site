{{define "title"}}Dive Trips{{end}}

{{define "heading"}}Dive Trips{{end}}

{{define "main"}}
  <section>

    {{if .Trips}}
      {{pageControls "/trip" .PageData}}

      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">Trip</th>
            <th scope="col">Start Date</th>
            <th scope="col">Duration</th>
            <th scope="col">Operator</th>
            <th scope="col">Price</th>
            <th scope="col">Dives Logged</th>
            <th scope="col">Rating</th>
          </tr>
        </thead>
        <tbody>
          {{range .Trips}}
            <tr>
              <th scope="row">{{.Name}}</td>
              <td>{{.StartDate.Format "2006-01-02"}}</td>
              <td>{{addF64 (divideF64 .Duration.Hours 24.0) 1.0}} days</td>
              <td>{{with .Operator}}{{.}}{{else}}-{{end}}</td>
              <td>{{with .Price}}{{.}}{{else}}-{{end}}</td>
              <td>{{.Dives}}</td>
              <td>{{with .Rating}}{{.}}/10{{else}}-{{end}}</td>
            </tr>
          {{end}}
        </tbody>
      </table>

      {{pageControls "/trip" .PageData}}

    {{else}}
      <p>
        No dive trips have been added yet. Please feel free to
        <a href="/trip/add">add a new one</a>.
      </p>
    {{end}}

  </section>
{{end}}


{{define "title"}}Dive Courses and Certifications{{end}}

{{define "heading"}}Dive Courses and Certifications{{end}}

{{define "main"}}
  <section>

    {{if .Certifications}}
      {{pageControls "/certification" .PageData}}

      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">Course</th>
            <th scope="col">Start Date</th>
            <th scope="col">Duration</th>
            <th scope="col">Operator</th>
            <th scope="col">Price</th>
            <th scope="col">Dives Logged</th>
            <th scope="col">Rating</th>
          </tr>
        </thead>
        <tbody>
          {{range .Certifications}}
            <tr>
              <th scope="row">{{.Course}}</td>
              <td>{{.StartDate.Format "2006-01-02"}}</td>
              <td>{{addF64 (divideF64 .Duration.Hours 24.0) 1.0}} days</td>
              <td>{{.Operator}}</td>
              <td>{{with .Price}}{{.}}{{else}}-{{end}}</td>
              <td>{{.Dives}}</td>
              <td>{{with .Rating}}{{.}}/10{{else}}-{{end}}</td>
            </tr>
          {{end}}
        </tbody>
      </table>

      {{pageControls "/certification" .PageData}}

    {{else}}
      <p>
        No dive certifications have been added yet. Please feel free to
        <a href="/certification/add">add a new one</a>.
      </p>
    {{end}}

  </section>
{{end}}

